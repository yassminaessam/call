{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist/spa",
  "installCommand": "npm install",
  "framework": null,
  "build": {
    "env": {
      "NODE_VERSION": "18"
    }
  },
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.7"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    { 
      "handle": "filesystem" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}
