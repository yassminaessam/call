{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/spa",
  "installCommand": "npm install",
  "framework": null,
  "functions": {
    "api/**": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.ts",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "DATABASE_URL": "postgresql://user:pass@localhost:5432/callcenter",
    "GRANDSTREAM_HOST": "192.168.1.100",
    "GRANDSTREAM_PORT": "8088", 
    "GRANDSTREAM_USERNAME": "admin",
    "GRANDSTREAM_PASSWORD": "admin",
    "GRANDSTREAM_API_VERSION": "v1.0"
  }
}
